{
  "id": "set-resolver",
  "name": "Set Resolver (V6)",
  "version": "2.0.0",
  "category": "blockchain",
  "description": "Set resolver for a document - IntegraDocumentRegistryV6",
  "integraId": 8,
  "defaults": {
    "chain": "polygon"
  },
  "metadata": {
    "tags": ["resolver-management", "v6", "document-registry"],
    "tier": 3,
    "category": "blockchain",
    "permissions": ["blockchain.document-registry.write"]
  },
  "workflow": {
    "steps": [
      {
        "id": "set-resolver",
        "name": "Set Resolver on Blockchain",
        "type": "activity",
        "action": "message",
        "timeout": "300s",
        "retryPolicy": {
          "initialInterval": "5s",
          "maximumAttempts": 5,
          "maximumInterval": "60s",
          "backoffCoefficient": 2
        },
        "actionParams": {
          "type": "blockchain",
          "chain": "polygon",
          "contractType": "document-registry",
          "contractVersion": "v6.0"
        },
        "continueOnFailure": false
      }
    ],
    "inputSchema": {
      "type": "object",
      "required": ["integraHash", "newResolver"],
      "properties": {
        "integraHash": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{64}$",
          "description": "Document identifier"
        },
        "newResolver": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{40}$",
          "description": "New resolver address"
        }
      }
    }
  },
  "blockchainSchema": {
    "method": "setResolver",
    "contract": "IntegraDocumentRegistry",
    "contractType": "document-registry",
    "parameters": {
      "integraHash": {"source": "input", "path": "integraHash"},
      "newResolver": {"source": "input", "path": "newResolver"}
    }
  },
  "outputs": {
    "transactionHash": "${results.set-resolver.transactionHash}"
  }
}

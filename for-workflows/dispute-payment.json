{
  "id": "dispute-payment",
  "name": "Dispute Payment (V6)",
  "version": "2.0.0",
  "category": "blockchain",
  "description": "Dispute payment (claim payment not received/incorrect) - IntegraSignalV6",
  "integraId": 18,
  "defaults": {
    "chain": "polygon"
  },
  "metadata": {
    "tags": ["payment-dispute", "v6", "signal"],
    "tier": 3,
    "category": "blockchain",
    "permissions": ["blockchain.signal.write"]
  },
  "workflow": {
    "steps": [
      {
        "id": "dispute-payment",
        "name": "Dispute Payment on Blockchain",
        "type": "activity",
        "action": "message",
        "timeout": "300s",
        "retryPolicy": {
          "initialInterval": "5s",
          "maximumAttempts": 5,
          "maximumInterval": "60s",
          "backoffCoefficient": 2
        },
        "actionParams": {
          "type": "blockchain",
          "chain": "polygon",
          "contractType": "signal",
          "contractVersion": "v6.0"
        },
        "continueOnFailure": false
      }
    ],
    "inputSchema": {
      "type": "object",
      "required": ["requestId", "reason"],
      "properties": {
        "requestId": {
          "type": "string",
          "pattern": "^0x[a-fA-F0-9]{64}$",
          "description": "Payment request identifier"
        },
        "reason": {
          "type": "string",
          "description": "Reason for dispute"
        }
      }
    }
  },
  "blockchainSchema": {
    "method": "disputePayment",
    "contract": "IntegraSignal",
    "contractType": "signal",
    "parameters": {
      "requestId": {"source": "input", "path": "requestId"},
      "reason": {"source": "input", "path": "reason"}
    }
  },
  "outputs": {
    "transactionHash": "${results.dispute-payment.transactionHash}"
  }
}
